{
  "name": "js-shopping-card",
  "version": "1.0.0",
  "description": "Project for practicing front-end web development with JavaScript.",
  "main": "./app/main.js",
  "config": {
    "pathApp": "./app",
    "pathAssets": "./app/assets",
    "pathScss": "./app/assets/scss",
    "pathCss": "./app/assets/css",
    "pathJs": "./app/assets/javascript",
    "pathSonarReports": "./.sonar-reports"
  },
  "scripts": {
    "browser-sync": "browser-sync start --config bs-config.js",
    "build": "npm-run-all --silent -s html-lint css-build js-build",
    "css": "npm-run-all --silent -s css-lint css-build",
    "css-build": "npm-run-all --silent -s css-lint css-compile css-purify css-prefix css-minify",
    "css-compile": "sass --style expanded --source-map --embed-sources --no-error-css ${npm_package_config_pathScss}/main.scss:${npm_package_config_pathCss}/main.css",
    "css-fmt": "prettier --write ${npm_package_config_pathAssets}/{css,scss}/*.{css,scss}",
    "css-fix": "stylelint \"${npm_package_config_pathAssets}/{css,scss}/*.{css,scss}\" --cache --cache-location .cache/.stylelintcache --rd --fix",
    "css-lint": "npm-run-all --silent -c css-lint-vars css-lint-stylelint",
    "css-lint-stylelint": "stylelint \"${npm_package_config_pathAssets}/{css,scss}/*.{css,scss}\" --cache --cache-location .cache/.stylelintcache --rd",
    "css-lint-vars": "fusv ${npm_package_config_pathScss}/",
    "css-minify": "npm-run-all -p css-minify-*",
    "css-minify-main": "cleancss -O1 --format breakWith=lf --source-map --source-map-inline-sources --output ${npm_package_config_pathCss}/main.min.css ${npm_package_config_pathCss}/main.css",
    "css-prefix": "npm-run-all -p css-prefix-*",
    "css-prefix-main": "postcss --config postcss.config.js --replace \"${npm_package_config_pathCss}/*.css\" \"!${npm_package_config_pathCss}/*.min.css\"",
    "css-purify": "npm-run-all -p css-purify-*",
    "css-purify-main": "purifycss ${npm_package_config_pathCss}/main.css index.html --info --out ${npm_package_config_pathCss}/main.css",
    "fmt": "npm-run-all --silent -p html-fmt css-fmt js-fmt",
    "fix": "npm-run-all -c -p css-fix js-fix",
    "git-hook-pre-commit": "npm-run-all fmt lint",
    "git-hook-pre-push": "npm-run-all --silent -c -s lint test-git-hook",
    "html-fmt": "prettier --write ${npm_package_config_pathApp}/{*.html,**/*.html}",
    "html-lint": "htmlhint ${npm_package_config_pathApp}",
    "init-browser": "npm-run-all --silent -s init-firefox init-webserver",
    "init-firefox": "firefox --newinstance -p Test &",
    "init-webserver": "firefox -p Test http://localhost:3000",
    "lint": "npm-run-all --silent -c -s html-lint lockfile-lint-e0 css-lint js-lint",
    "lockfile-lint": "lockfile-lint --allowed-hosts npm --allowed-schemes https: --empty-hostname false --type npm --path package-lock.json",
    "lockfile-lint-e0": "npm-run-all --silent lockfile-lint; exit 0",
    "js": "npm-run-all --silent -s js-lint js-build",
    "js-build": "npm-run-all js-lint js-compile js-minify",
    "js-compile": "npm-run-all -p js-compile-*",
    "js-fix": "eslint --cache --cache-file .cache/.eslintcache --report-unused-disable-directives ${npm_package_config_pathApp} --fix",
    "js-fmt": "prettier --write ${npm_package_config_pathApp}/{*.js,**/*.js}",
    "js-lint": "eslint --cache --cache-file .cache/.eslintcache --report-unused-disable-directives ${npm_package_config_pathApp}",
    "js-minify": "npm-run-all -p js-minify-*",
    "sonar-report": "npm-run-all --silent -c -p sonar-report-lint sonar-report-test",
    "sonar-report-css-lint": "npm-run-all -c -p sonar-report-css-lint-*",
    "sonar-report-css-lint-stylelint": "stylelint -f json -o \"${npm_package_config_pathSonarReports}/stylelint-report.json\" \"${npm_package_config_pathAssets}/{css,scss}/*.{css,scss}\";",
    "sonar-report-css-lint-vars": "fusv ${npm_package_config_pathScss}/ -f sonar -o ${npm_package_config_pathSonarReports}/fusv-report.json;",
    "sonar-report-js-lint": "eslint --report-unused-disable-directives ${npm_package_config_pathApp} -f json -o ${npm_package_config_pathSonarReports}/eslint-report.json;",
    "sonar-report-lint": "npm-run-all --silent -c -p lockfile-lint-e0 sonar-report-css-lint sonar-report-js-lint",
    "sonar-report-test": "npm-run-all --silent -c test-ci",
    "test": "jest",
    "test-git-hook": "jest --bail 10 --silent",
    "test-coverage": "jest --coverage",
    "test-ci": "jest --silent --ci --coverage",
    "watch-css-build": "nodemon -w ${npm_package_config_pathScss}/ -w assets/javascript/ --ext scss --exec \"npm-run-all css-lint css-compile css-purify css-prefix css-minify\"",
    "watch-css-build-no-lint": "nodemon -w ${npm_package_config_pathScss}/ -w assets/javascript/ --ext scss --exec \"npm-run-all css-compile css-purify css-prefix css-minify\"",
    "watch-css-build-no-lint-no-purify": "nodemon -w ${npm_package_config_pathScss}/ -w assets/javascript/ --ext scss --exec \"npm-run-all css-compile css-prefix css-minify\"",
    "watch-build": "nodemon -w ${npm_package_config_pathApp}/ --ext html,scss,js --exec \"npm-run-all html-lint css-build\"",
    "watch-build-show-browser": "npm-run-all -p browser-sync watch-build",
    "watch-fmt": "nodemon  -w ${npm_package_config_pathApp}/ --ext html,scss,js --exec \"npm-run-all fmt\"",
    "watch-lint": "nodemon -d 10 -w .eslintrc.json -w .eslintignore -w .stylelintrc -w .stylelintignore -w ${npm_package_config_pathApp}/ --ext html,scss,js --exec \"npm-run-all --silent -c lint\"",
    "watch-test": "jest --watch --onlyChanged"
  },
  "repository": {
    "watch-lint": "nodemon -w ${npm_package_config_pathScss}/ -w assets/javascript/ --ext scss --exec \"npm-run-all css-lint css-compile css-purify css-prefix css-minify\"",
    "type": "git",
    "url": "git+https://github.com/gentzeng/js-shopping-card.git"
  },
  "keywords": [
    "JavaScript",
    "CSS",
    "HTML",
    "Sass",
    "Jest",
    "Jenkins",
    "SonarQube"
  ],
  "author": "Georg Gentzen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gentzeng/js-shopping-card/issues"
  },
  "homepage": "https://github.com/gentzeng/js-shopping-card#readme",
  "devDependencies": {
    "autoprefixer": "^10.2.1",
    "clean-css-cli": "^4.3.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-xo": "^0.32.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-sonarjs": "^0.5.0",
    "eslint-plugin-unicorn": "^27.0.0",
    "find-unused-sass-variables": "file:find-unused-sass-variables-3.1.0.tgz",
    "glob": "^7.1.6",
    "htmlhint": "^0.14.1",
    "jest": "^26.6.3",
    "jest-sonar-reporter": "^2.0.0",
    "lockfile-lint": "^4.3.7",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.2.1",
    "purify-css": "^1.2.5",
    "sass": "^1.32.2",
    "stylelint": "^13.8.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-config-sonarqube": "^1.0.3"
  },
  "dependencies": {
    "stylelint-scss": "~3.18.0"
  }
}
