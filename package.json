{
  "name": "js-shopping-card",
  "version": "1.0.0",
  "description": "Project for practicing front-end web development with JavaScript.",
  "main": "./app/main.js",
  "config": {
    "pathAssets": "./app/assets",
    "pathScss": "./app/assets/scss",
    "pathCss": "./app/assets/css",
    "pathSonarReports": "./.sonar-reports"
  },
  "scripts": {
    "browser-sync": "browser-sync start --config bs-config.js",
    "css": "npm-run-all css-compile css-purify css-prefix css-minify",
    "css-compile": "sass --style expanded --source-map --embed-sources --no-error-css ${npm_package_config_pathScss}/main.scss:${npm_package_config_pathCss}/main.css",
    "css-lint": "npm-run-all --continue-on-error --parallel css-lint-*",
    "css-lint-stylelint": "stylelint \"**/*.{css,scss}\" --cache --cache-location .cache/.stylelintcache --rd",
    "css-lint-vars": "fusv ${npm_package_config_pathScss}/",
    "css-minify": "npm-run-all --parallel css-minify-*",
    "css-minify-main": "cleancss -O1 --format breakWith=lf --source-map --source-map-inline-sources --output ${npm_package_config_pathCss}/main.min.css ${npm_package_config_pathCss}/main.css",
    "css-prefix": "npm-run-all --parallel css-prefix-*",
    "css-prefix-main": "postcss --config postcss.config.js --replace \"${npm_package_config_pathCss}/*.css\" \"!${npm_package_config_pathCss}/*.min.css\"",
    "css-purify": "npm-run-all --parallel css-purify-*",
    "css-purify-main": "purifycss ${npm_package_config_pathCss}/main.css index.html --info --out ${npm_package_config_pathCss}/main.css",
    "init-browser": "npm-run-all --sequential init-firefox init-webserver",
    "init-firefox": "firefox --newinstance -p Dev &",
    "init-webserver": "firefox -p Dev http://localhost:3000",
    "lint": "npm-run-all --parallel css-lint lockfile-lint",
    "lockfile-lint": "lockfile-lint --allowed-hosts npm --allowed-schemes https: --empty-hostname false --type npm --path package-lock.json",
    "js": "npm-run-all js-compile js-minify",
    "js-compile": "npm-run-all --parallel js-compile-*",
    "js-fmt": "npm-run-all --parallel js-fmt-*",
    "js-minify": "npm-run-all --parallel js-minify-*",
    "sonar-report-css-lint": "npm-run-all --continue-on-error --parallel sonar-report-css-lint-*",
    "sonar-report-css-lint-stylelint": "stylelint -f json -o \"${npm_package_config_pathSonarReports}/stylelint-report.json\" \"${npm_package_config_pathAssets}/{css,scss}/*.{css,scss}\"",
    "sonar-report-css-lint-vars": "fusv ${npm_package_config_pathScss}/ -s -f sonar -o .sonar-reports/fusv-report.json",
    "sonar-report-lint": "npm-run-all --parallel sonar-report-css-lint lockfile-lint",
    "test": "jest",
    "watch": "npm-run-all --parallel watch-*",
    "watch-css-main": "nodemon --watch index.html --watch ${npm_package_config_pathScss}/ --watch assets/javascript/ --ext scss --exec \"npm-run-all css-lint css-compile css-purify css-prefix css-minify\"",
    "watch-css-no-lint": "nodemon --watch index.html --watch ${npm_package_config_pathScss}/ --watch assets/javascript/ --ext scss --exec \"npm-run-all css-compile css-purifyjs css-prefix css-minify\"",
    "watch-css-no-lint-purifyjs": "nodemon --watch index.html --watch ${npm_package_config_pathScss}/ --watch assets/javascript/ --ext scss --exec \"npm-run-all css-compile css-purifyjs css-prefix css-minify\"",
    "watch-css-no-lint-no-purify": "nodemon --watch index.html --watch ${npm_package_config_pathScss}/ --watch assets/javascript/ --ext scss --exec \"npm-run-all css-compile css-prefix css-minify\"",
    "watch-dev": "npm-run-all --parallel browser-sync watch-css-no-lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gentzeng/js-shopping-card.git"
  },
  "keywords": [
    "JavaScript",
    "CSS",
    "HTML",
    "Sass",
    "Jest",
    "Jenkins",
    "SonarQube"
  ],
  "author": "Georg Gentzen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gentzeng/js-shopping-card/issues"
  },
  "homepage": "https://github.com/gentzeng/js-shopping-card#readme",
  "devDependencies": {
    "autoprefixer": "^10.2.1",
    "clean-css-cli": "^4.3.0",
    "find-unused-sass-variables": "file:find-unused-sass-variables-3.1.0.tgz",
    "glob": "^7.1.6",
    "jest": "^26.6.3",
    "jest-sonar-reporter": "^2.0.0",
    "lockfile-lint": "^4.3.7",
    "nodemon": "^2.0.7",
    "npm-run-all": "~4.1.5",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1",
    "purify-css": "^1.2.5",
    "sass": "^1.32.2",
    "stylelint": "^13.8.0",
    "stylelint-config-recommended-scss": "~4.2.0"
  },
  "dependencies": {
    "stylelint-scss": "~3.18.0"
  }
}
