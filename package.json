{
  "name": "js-shopping-card",
  "version": "1.0.0",
  "description": "Project for practicing front-end web development with JavaScript.",
  "main": "./app/main.js",
  "config": {
    "pathApp": "./app",
    "pathAssets": "./app/assets",
    "pathScss": "./app/assets/scss",
    "pathCss": "./app/assets/css",
    "pathJs": "./app/assets/javascript",
    "pathSonarReports": "./.sonar-reports"
  },
  "scripts": {
    "browser-sync": "browser-sync start --config bs-config.js",
    "css": "npm-run-all css-compile css-purify css-prefix css-minify",
    "css-fmt": "npm-run-all css-lint-stylelint-fix",
    "css-fmt-fix": "npm-run-all css-fmt",
    "css-compile": "sass --style expanded --source-map --embed-sources --no-error-css ${npm_package_config_pathScss}/main.scss:${npm_package_config_pathCss}/main.css",
    "css-lint": "npm-run-all --continue-on-error css-lint-vars css-lint-stylelint",
    "css-lint-e0": "npm-run-all --silent --continue-on-error --parallel css-lint-e0-*",
    "css-lint-e0-stylelint": "stylelint \"${npm_package_config_pathAssets}/{css,scss}/*.{css,scss}\" --cache --cache-location .cache/.stylelintcache --rd; exit 0",
    "css-lint-e0-vars": "fusv ${npm_package_config_pathScss}/; exit 0",
    "css-lint-stylelint": "stylelint \"${npm_package_config_pathAssets}/{css,scss}/*.{css,scss}\" --cache --cache-location .cache/.stylelintcache --rd",
    "css-lint-stylelint-fix": "stylelint \"${npm_package_config_pathAssets}/{css,scss}/*.{css,scss}\" --cache --cache-location .cache/.stylelintcache --rd --fix",
    "css-lint-vars": "fusv ${npm_package_config_pathScss}/",
    "css-minify": "npm-run-all --parallel css-minify-*",
    "css-minify-main": "cleancss -O1 --format breakWith=lf --source-map --source-map-inline-sources --output ${npm_package_config_pathCss}/main.min.css ${npm_package_config_pathCss}/main.css",
    "css-prefix": "npm-run-all --parallel css-prefix-*",
    "css-prefix-main": "postcss --config postcss.config.js --replace \"${npm_package_config_pathCss}/*.css\" \"!${npm_package_config_pathCss}/*.min.css\"",
    "css-purify": "npm-run-all --parallel css-purify-*",
    "css-purify-main": "purifycss ${npm_package_config_pathCss}/main.css index.html --info --out ${npm_package_config_pathCss}/main.css",
    "fmt": "npm-run-all --parallel css-fmt js-fmt",
    "fmt-fix": "npm-run-all --parallel css-fmt-fix js-fmt-fix",
    "fmt-fix-lint": "npm-run-all --continue-on-error --sequential fmt-fix lint",
    "git-hook-pre-commit": "npm-run-all fmt-fix",
    "git-hook-pre-push": "npm-run-all --continue-on-error --sequential lockfile-lint-e0 css-lint js-lint test",
    "init-browser": "npm-run-all --sequential init-firefox init-webserver",
    "init-firefox": "firefox --newinstance -p Test &",
    "init-webserver": "firefox -p Test http://localhost:3000",
    "lint": "npm-run-all --continue-on-error --sequential lockfile-lint-e0 css-lint js-lint",
    "lint-e0": "npm-run-all --silent --parallel lockfile-lint-e0 css-lint-e0 js-lint-e0",
    "lockfile-lint": "lockfile-lint --allowed-hosts npm --allowed-schemes https: --empty-hostname false --type npm --path package-lock.json",
    "lockfile-lint-e0": "lockfile-lint --allowed-hosts npm --allowed-schemes https: --empty-hostname false --type npm --path package-lock.json; exit 0",
    "js": "npm-run-all js-compile js-minify",
    "js-compile": "npm-run-all --parallel js-compile-*",
    "js-fmt": "npm-run-all js-lint-fix",
    "js-fmt-fix": "npm-run-all js-fmt",
    "js-lint": "eslint --cache --cache-file .cache/.eslintcache --report-unused-disable-directives ${npm_package_config_pathApp}",
    "js-lint-e0": "eslint --cache --cache-file .cache/.eslintcache --report-unused-disable-directives ${npm_package_config_pathApp}; exit 0",
    "js-lint-fix": "eslint --cache --cache-file .cache/.eslintcache --report-unused-disable-directives ${npm_package_config_pathApp} --fix",
    "js-minify": "npm-run-all --parallel js-minify-*",
    "sonar-report-css-lint": "npm-run-all --continue-on-error --parallel sonar-report-css-lint-*",
    "sonar-report-css-lint-stylelint": "stylelint -f json -o \"${npm_package_config_pathSonarReports}/stylelint-report.json\" \"${npm_package_config_pathAssets}/{css,scss}/*.{css,scss}\"; exit 0",
    "sonar-report-css-lint-vars": "fusv ${npm_package_config_pathScss}/ -f sonar -o ${npm_package_config_pathSonarReports}/fusv-report.json; exit 0",
    "sonar-report-js-lint": "eslint --report-unused-disable-directives ${npm_package_config_pathApp} -f json -o ${npm_package_config_pathSonarReports}/eslint-report.json; exit 0",
    "sonar-report-lint": "npm-run-all --sequential lockfile-lint-e0 sonar-report-css-lint sonar-report-js-lint",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "watch": "npm-run-all --parallel watch-*",
    "watch-css-main": "nodemon --watch ${npm_package_config_pathScss}/ --watch assets/javascript/ --ext scss --exec \"npm-run-all css-lint css-compile css-purify css-prefix css-minify\"",
    "watch-css-no-lint": "nodemon --watch ${npm_package_config_pathScss}/ --watch assets/javascript/ --ext scss --exec \"npm-run-all css-compile css-purifyjs css-prefix css-minify\"",
    "watch-css-no-lint-purifyjs": "nodemon --watch ${npm_package_config_pathScss}/ --watch assets/javascript/ --ext scss --exec \"npm-run-all css-compile css-purifyjs css-prefix css-minify\"",
    "watch-css-no-lint-no-purify": "nodemon --watch ${npm_package_config_pathScss}/ --watch assets/javascript/ --ext scss --exec \"npm-run-all css-compile css-prefix css-minify\"",
    "watch-build": "nodemon --watch ${npm_package_config_pathApp}/ --ext html,scss,js --exec \"npm-run-all css\"",
    "watch-dev": "npm-run-all --parallel browser-sync watch-build",
    "watch-fmt": "nodemon  --watch ${npm_package_config_pathApp}/ --ext html,scss,js --exec \"npm-run-all fmt\"",
    "watch-fmt-fix": "nodemon  --watch ${npm_package_config_pathApp}/ --ext html,scss,js --exec \"npm-run-all fmt-fix\"",
    "watch-fmt-fix-lint": "nodemon  --watch ${npm_package_config_pathApp}/ --ext html,scss,js --exec \"npm-run-all --continue-on-error fmt-fix-lint\"",
    "watch-lint": "nodemon --watch .eslintrc.json --watch .eslintignore --watch .stylelintrc --watch .stylelintignore --watch ${npm_package_config_pathApp}/ --ext html,scss,js --exec \"npm-run-all --silent lint-e0\""
  },
  "repository": {
    "watch-lint": "nodemon --watch ${npm_package_config_pathScss}/ --watch assets/javascript/ --ext scss --exec \"npm-run-all css-lint css-compile css-purify css-prefix css-minify\"",
    "type": "git",
    "url": "git+https://github.com/gentzeng/js-shopping-card.git"
  },
  "keywords": [
    "JavaScript",
    "CSS",
    "HTML",
    "Sass",
    "Jest",
    "Jenkins",
    "SonarQube"
  ],
  "author": "Georg Gentzen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gentzeng/js-shopping-card/issues"
  },
  "homepage": "https://github.com/gentzeng/js-shopping-card#readme",
  "devDependencies": {
    "autoprefixer": "^10.2.1",
    "clean-css-cli": "^4.3.0",
    "eslint": "^7.19.0",
    "eslint-config-xo": "^0.32.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-sonarjs": "^0.5.0",
    "eslint-plugin-unicorn": "^27.0.0",
    "find-unused-sass-variables": "file:find-unused-sass-variables-3.1.0.tgz",
    "glob": "^7.1.6",
    "jest": "^26.6.3",
    "jest-sonar-reporter": "^2.0.0",
    "lockfile-lint": "^4.3.7",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.2.1",
    "prettier-eslint": "^12.0.0",
    "prettier-eslint-cli": "^5.0.0",
    "purify-css": "^1.2.5",
    "sass": "^1.32.2",
    "stylelint": "^13.8.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-config-sonarqube": "^1.0.3",
    "stylelint-prettier": "^1.1.2"
  },
  "dependencies": {
    "stylelint-scss": "~3.18.0"
  }
}
